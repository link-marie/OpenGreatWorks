<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootSecondPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/holo_green_dark"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/imageView1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@mipmap/s_1_1"

        app:layout_heightPercent="46%"
        app:layout_marginLeftPercent="20%"
        app:layout_marginTopPercent="27%"
        app:layout_widthPercent="36%"/>

    <ImageView
        android:id="@+id/imageView2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:alpha=".5"

        android:src="@mipmap/s_1_2"

        app:layout_heightPercent="6%"
        app:layout_marginLeftPercent="55%"
        app:layout_marginTopPercent="27%"
        app:layout_widthPercent="13%"/>


    <ImageView
        android:id="@+id/imageView3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@mipmap/s_1_3"

        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="36%"
        app:layout_marginTopPercent="44%"
        app:layout_widthPercent="15%"/>

    <ImageView
        android:id="@+id/imageView4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@mipmap/s_1_4"

        app:layout_heightPercent="11%"
        app:layout_marginLeftPercent="34%"
        app:layout_marginTopPercent="56%"
        app:layout_widthPercent="13%"/>

    <ImageView
        android:id="@+id/imageView6"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@mipmap/s_1_6"

        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="13%"
        app:layout_marginTopPercent="47%"
        app:layout_widthPercent="20%"/>

    <ImageView
        android:id="@+id/imageView7"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@mipmap/s_1_7"

        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="15%"
        app:layout_marginTopPercent="35%"
        app:layout_widthPercent="17%"/>

    <ImageView
        android:id="@+id/imageView5"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@mipmap/s_1_5"

        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="36%"
        app:layout_marginTopPercent="30%"
        app:layout_widthPercent="15%"/>

    <ImageView
        android:id="@+id/imageView8"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@mipmap/s_1_8"

        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="25%"
        app:layout_marginTopPercent="15%"
        app:layout_widthPercent="25%"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:gravity="center"

        android:text="@string/title2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/intro_text_size_large"

        app:layout_heightPercent="20%"
        app:layout_marginBottomPercent="15%"
        app:layout_widthPercent="35%"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:gravity="center"

        android:text="@string/title2_1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/intro_text_size_large"

        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="8%"
        app:layout_widthPercent="35%"/>

</android.support.percent.PercentRelativeLayout>